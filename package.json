{
    "name": "@illinois-toolkit/ilw-breadcrumbs",
    "description": "Illinois Toolkit: a list of formatted links that provide the path between the siteâ€™s home page and the page the reader is currently viewing.",
    "repository": "github:web-illinois/ilw-breadcrumbs",
    "private": false,
    "license": "MIT",
    "version": "1.3.0",
    "type": "module",
    "files": [
        "src/**",
        "dist/**",
        "builder/**"
    ],
    "exports": {
        ".": {
            "import": "./dist/ilw-breadcrumbs.js",
            "require": "./dist/ilw-breadcrumbs.cjs",
            "default": "./dist/ilw-breadcrumbs.js"
        },
        "./ilw-breadcrumbs.css": {
            "import": "./dist/ilw-breadcrumbs.css"
        }
    },
    "main": "./dist/ilw-breadcrumbs.js",
    "module": "./dist/ilw-breadcrumbs.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
        "preview": "vite preview",
        "prepack": "npm run build",
        "test:axe": "playwright test",
        "test:axe:github": "playwright test --config playwright.ci.config.ts",
        "test": "vitest run --browser.headless",
        "test:browser": "vitest watch --browser chromium"
    },
    "dependencies": {
        "lit": "3.1.3"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@illinois-toolkit/ilw-core": "^1.0.2",
        "@playwright/test": "^1.54.1",
        "@vitest/browser": "^3.2.4",
        "axe-html-reporter": "^2.2.11",
        "playwright": "^1.54.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.3",
        "vite-plugin-dts": "^4.5.4",
        "vitest-browser-lit": "^0.1.0"
    }
}
